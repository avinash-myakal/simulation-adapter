# =========================
# file: .env.docker
# =========================
# ---- Registry / Adapter ----
REGISTRY_ENDPOINT=http://mmvib-registry:9200
MODEL_NAME=energy_sim_model
MODEL_DESCRIPTION=EnergyPlus runner (MinIO in/out)
MODEL_VERSION=1.0.0
MODEL_MAX_WORKERS=1
MODEL_USED_WORKERS=0

# Public URL composition (same logic as aging)
ADAPTER_SERVICE=energy-sim-adapter
ADAPTER_PORT=8000
# Optionally set ADAPTER_PUBLIC_URL=http://host:port if registry is outside Docker

# ---- MinIO / S3 ----
S3_ENDPOINT=http://minio:9000
S3_ACCESS_KEY=admin
S3_SECRET_KEY=password
S3_BUCKET=mmstore

# Folder keys (match your MinIO layout)
S3_IDF_PREFIX=output_idf_files/
S3_EPW_PREFIX=weather/epw/

# ---- EnergyPlus ----
ENERGYPLUS_EXE=energyplus
RUN_TIMEOUT_SEC=3600
KEEP_OUTPUTS=false

# ---- Logging ----
LOG_LEVEL=INFO

